                        android:typeface="sans"
                        android:id="@+id/tv_text2"
                        android:layout_below="@+id/tv_text1"
                        android:layout_marginLeft="10dp"
                        />




                </RelativeLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView

