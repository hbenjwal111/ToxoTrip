<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">












    <android.support.v4.widget.NestedScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:padding="2dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        xmlns:card_view="http://schemas.android.com/tools"

       >





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical"
        >






        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_gravity="center_horizontal|center_vertical"


            app:cardBackgroundColor="@color/light_white"
            app:cardCornerRadius="1dp"
            app:cardElevation="8dp"
            app:cardPreventCornerOverlap="false"

            app:contentPaddingTop="1dp"
            card_view:cardElevation="@dimen/dimen_8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@color/grey"

                android:layout_marginTop="1dp"

                android:fontFamily="sans"
                android:gravity="left|center_vertical|center_horizontal"
                android:text="Category Detail"
                android:textColor="@color/cardview_dark_background"
                android:textSize="@dimen/text_large"
                android:paddingLeft="10dp"
                android:textStyle="normal" />
            </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:layout_marginTop="50dp"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical">



                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:layout_gravity="center"

                            android:layout_marginTop="10dp"

                            android:fontFamily="sans"
                            android:gravity="left|center_vertical|center_horizontal"
                            android:text="Category"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_large"
                            android:paddingLeft="10dp"
                            android:textStyle="normal" />

                    <TextView
                        android:id="@+id/categoryi"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="sans"
                        android:gravity="left|center_vertical|center_horizontal"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_medium"
                        android:textStyle="normal" />



                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="5dp">

                        <EditText
                            android:id="@+id/sub"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:gravity="left|center"
                            android:hint="Sub Category"
                            android:inputType="text"
                            android:textSize="@dimen/text_medium"
                            android:textStyle="normal"



                            android:typeface="sans"
                            android:windowSoftInputMode="stateHidden"

                            />


                    </android.support.design.widget.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:layout_marginTop="10dp"
                        android:focusableInTouchMode="true"
                        android:orientation="vertical">



                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:background="@color/grey"

                            android:layout_marginTop="1dp"

                            android:fontFamily="sans"
                            android:gravity="left|center_vertical|center_horizontal"
                            android:text="Ad Detail"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="@dimen/text_large"
                            android:paddingLeft="10dp"
                            android:textStyle="normal" />
                    </LinearLayout>

                    <com.toxootrip.activity.CustomPictureHolder
                        android:id="@+id/pictureHolder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp">

                    </com.toxootrip.activity.CustomPictureHolder>

                    <TextView
                        android:id="@+id/loginBggtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:layout_marginTop="3dp"
                        android:layout_weight="0.03"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center|center_vertical|center_horizontal"
                        android:text="You can add 8 photos"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_large"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/loginBgggtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:layout_marginTop="3dp"
                        android:layout_weight="0.03"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center|center_vertical|center_horizontal"
                        android:text="First photo of your selection will be your cover photo"
                        android:textColor="@color/black"
                        android:textSize="13dp"
                        android:textStyle="normal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:layout_marginTop="10dp"
                        android:focusableInTouchMode="true"
                        android:orientation="vertical">



                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:background="@color/grey"

                            android:layout_marginTop="1dp"

                            android:fontFamily="sans"
                            android:gravity="left|center_vertical|center_horizontal"
                            android:text="House For Sale"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="@dimen/text_large"
                            android:paddingLeft="10dp"
                            android:textStyle="normal" />
                    </LinearLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:id="@+id/input_layout_product"
                        android:paddingLeft="5dp">

                        <EditText
                            android:id="@+id/type"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:gravity="left|center"
                            android:hint="Product Type"
                            android:inputType="text"
                            android:textSize="@dimen/text_medium"
                            android:textStyle="normal"



                            android:typeface="sans"
                            android:windowSoftInputMode="stateHidden"

                            />


                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_brand"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="5dp"
                        >

                        <EditText
                            android:id="@+id/brand"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:gravity="left|center"
                            android:hint="Brand Name"
                            android:inputType="text"

                            android:textSize="@dimen/text_medium"
                            android:textStyle="normal"
                            android:typeface="sans"
                            android:windowSoftInputMode="stateHidden"

                            />


                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_model"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="5dp">

                        <EditText
                            android:id="@+id/model"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="left|center"
                            android:hint="Model"


                            android:inputType="text"

                            android:textSize="@dimen/text_medium"
                            android:textStyle="normal"



                            android:typeface="sans"
                            android:windowSoftInputMode="stateHidden"

                            />


                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="5dp"
                        android:id="@+id/input_layout_fuel">

                        <EditText
                            android:id="@+id/fuel"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:gravity="left|center"

                            android:hint="Fuel Type"
                            android:textSize="@dimen/text_medium"
                            android:textStyle="normal"



                            android:typeface="sans"
                            android:windowSoftInputMode="stateHidden"

                            />


                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_you"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="5dp">

                        <EditText
                            android:id="@+id/youare"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:gravity="left|center"

                            android:hint="You Are"
                            android:textSize="@dimen/text_medium"
                            android:textStyle="normal"



                            android:typeface="sans"
                            android:windowSoftInputMode="stateHidden"

                            />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="5dp">

                        <EditText
                            android:id="@+id/title"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:gravity="left|center"

                            android:hint="Ad Title"
                            android:inputType="text"

                            android:textSize="@dimen/text_medium"
                            android:textStyle="normal"



                            android:typeface="sans"
                            android:windowSoftInputMode="stateHidden"

                            />


                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_des"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="5dp">

                        <EditText
                            android:id="@+id/desc"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="left|center"
                            android:hint="Description"


                            android:inputType="text"

                            android:textSize="@dimen/text_medium"
                            android:textStyle="normal"



                            android:typeface="sans"
                            android:windowSoftInputMode="stateHidden"

                            />


                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_reges"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="5dp">

                        <EditText
                            android:id="@+id/regestration"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="left|center"
                            android:hint="Year of Regestration"


                            android:inputType="number"

                            android:textSize="@dimen/text_medium"
                            android:textStyle="normal"



                            android:typeface="sans"
                            android:windowSoftInputMode="stateHidden"

                            />


                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="5dp">

                        <EditText
                            android:id="@+id/color"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="left|center"
                            android:hint="Color"


                            android:inputType="text"

                            android:textSize="@dimen/text_medium"
                            android:textStyle="normal"



                            android:typeface="sans"
                            android:windowSoftInputMode="stateHidden"

                            />


                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="5dp">

                        <EditText
                            android:id="@+id/county"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:gravity="left|center"

                            android:hint="Country"
                            android:textSize="@dimen/text_medium"
                            android:textStyle="normal"



                            android:typeface="sans"
                            android:windowSoftInputMode="stateHidden"

                            />


                    </android.support.design.widget.TextInputLayout>



                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="5dp">

                        <EditText
                            android:id="@+id/location"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:gravity="left|center"

                            android:hint="City"
                            android:textSize="@dimen/text_medium"
                            android:textStyle="normal"



                            android:typeface="sans"
                            android:windowSoftInputMode="stateHidden"

                            />


                    </android.support.design.widget.TextInputLayout>



                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="5dp">

                        <EditText
                            android:id="@+id/price"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="left|center"
                            android:hint="Price"


                            android:inputType="number"

                            android:textSize="@dimen/text_medium"
                            android:textStyle="normal"



                            android:typeface="sans"
                            android:windowSoftInputMode="stateHidden"

                            />


                    </android.support.design.widget.TextInputLayout>



                    <TextView
                        android:id="@+id/loginBtn"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_gravity="center"

                        android:layout_marginTop="10dp"
                        android:layout_weight="0.03"
                        android:background="@color/colorPrimary"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center|center_vertical|center_horizontal"
                        android:text="Post"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_large"
                        android:textStyle="normal" />


                </LinearLayout>

        </android.support.v7.widget.CardView>



    </LinearLayout>

    </android.support.v4.widget.NestedScrollView>



    <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@android:color/white"
                app:borderWidth="0dp"
                app:fab_addButtonColorNormal="@color/pink"
                android:layout_gravity="bottom|end"
                app:srcCompat="@drawable/ic_local_see_black_24dp"

                app:fabSize="normal"
                android:layout_marginBottom="40dp"
                android:layout_marginRight="10dp"

                />











    </android.support.design.widget.CoordinatorLayout>
