<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
   android:background="@color/background" >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/white"

        android:text="Search Hotels"
        android:layout_marginTop="15dp"
        android:textColor="@color/pink"
        android:textSize="22dp"
        android:textStyle="normal"
        android:typeface="sans"
        android:windowSoftInputMode="stateHidden"
        />

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        app:elevation="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:theme="@style/AppTheme.AppBarOverlay">

        <TextView
            android:id="@+id/countryEt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="left|center"
            android:background="@color/white"
            android:drawableLeft="@drawable/search"
            android:text="Search Country"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:drawableTint="@color/pink"
            android:drawablePadding="10dp"
            android:paddingLeft="10dp"
            android:textColor="@color/pink"
            android:textSize="@dimen/text_medium"
            android:textStyle="normal"
            android:typeface="sans"
            android:windowSoftInputMode="stateHidden"
            />


        <TextView
            android:id="@+id/emailEt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="left|center"
            android:background="@color/white"
            android:drawableLeft="@drawable/search"
            android:text="Search City"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:drawableTint="@color/pink"
            android:drawablePadding="10dp"
            android:paddingLeft="10dp"
            android:textColor="@color/pink"
            android:textSize="@dimen/text_medium"
            android:textStyle="normal"
            android:typeface="sans"
            android:windowSoftInputMode="stateHidden"
            />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            app:cardBackgroundColor="@color/light_white"
            app:cardCornerRadius="@dimen/dimen_3dp"
            app:cardElevation="5dp"
            app:cardPreventCornerOverlap="false"
            app:contentPaddingBottom="10dp"
            app:contentPaddingLeft="10dp"
            app:contentPaddingRight="10dp"
            app:contentPaddingTop="10dp">




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:scrollHorizontally="false"
                        android:text="CheckIn"
                        android:textColor="@color/pink"
                        android:textSize="@dimen/text_medium"
                        android:textStyle="normal"

                        android:typeface="sans" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:scrollHorizontally="false"
                        android:text="CheckOut"
                        android:textColor="@color/pink"
                        android:textSize="@dimen/text_medium"


                        android:textStyle="normal"
                        android:typeface="sans" />

                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/fromDtae"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:focusable="false"

                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/pink"
                        android:textSize="@dimen/text_medium"
                        android:textStyle="normal"

                        android:typeface="sans" />


                    <TextView
                        android:id="@+id/toDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"

                        android:scrollHorizontally="false"
                        android:text=""
                        android:textColor="@color/pink"
                        android:textSize="@dimen/text_medium"

                        android:textStyle="normal"
                        android:typeface="sans" />

                </LinearLayout>


            </RelativeLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            app:cardBackgroundColor="@color/light_white"
            app:cardCornerRadius="@dimen/dimen_3dp"
            app:cardElevation="5dp"
            app:cardPreventCornerOverlap="false"
            app:contentPaddingBottom="10dp"
            app:contentPaddingLeft="10dp"
            app:contentPaddingRight="10dp"
            app:contentPaddingTop="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:scrollHorizontally="false"
                        android:text="Room"
                        android:textColor="@color/pink"
                        android:textSize="@dimen/text_medium"
                        android:textStyle="normal"

                        android:typeface="sans" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:scrollHorizontally="false"
                        android:text="Adult"
                        android:textColor="@color/pink"
                        android:textSize="@dimen/text_medium"


                        android:textStyle="normal"
                        android:typeface="sans" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:scrollHorizontally="false"
                        android:text="Children"
                        android:textColor="@color/pink"
                        android:textSize="@dimen/text_medium"


                        android:textStyle="normal"
                        android:typeface="sans" />

                </LinearLayout>


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/forroom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:focusable="false"

                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/pink"
                        android:textSize="@dimen/text_medium"
                        android:textStyle="normal"

                        android:typeface="sans" />


                    <TextView
                        android:id="@+id/foradult"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"

                        android:scrollHorizontally="false"
                        android:text=""
                        android:textColor="@color/pink"
                        android:textSize="@dimen/text_medium"

                        android:textStyle="normal"
                        android:typeface="sans" />

                    <TextView
                        android:id="@+id/forchild"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"

                        android:scrollHorizontally="false"
                        android:text=""
                        android:textColor="@color/pink"
                        android:textSize="@dimen/text_medium"

                        android:textStyle="normal"
                        android:typeface="sans" />

                </LinearLayout>


            </RelativeLayout>


        </android.support.v7.widget.CardView>


    </android.support.design.widget.AppBarLayout>






    <Button
        android:id="@+id/button_previous"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"

        android:layout_gravity="bottom"

        android:background="@color/pink"
        android:textStyle="normal"
        android:typeface="sans"

        android:textSize="@dimen/text_large"
        android:textColor="@color/white"

        android:text="Get Set Go" />




</android.support.design.widget.CoordinatorLayout>
